                commUtil.fnClosePrVideoPopup(prVideoPopupEl, event);
            });

            // 메인 팝업 스크립트
            if (document.querySelector("#mainPopup") != null) {

                let popupCookie = commUtil.getCookie("popupBlockPage"); // 팝업 쿠키
                const popupElementList = document.querySelectorAll(".notice-popup"); // 팝업 목록

                //팝업 각각 쿠키설정 확인해서 show 클래스 주기
                Array.from(popupElementList).forEach(popupEl => {
                    if (commUtil.isEmpty(popupCookie)) {
                        popupEl.classList.add("show");
                    } else {
                        const arrPopupNoList = popupCookie.split(",");
                        const isBlock = arrPopupNoList.includes(popupEl.getAttribute("data-popup-no"));
                        if (!isBlock) {
                            popupEl.classList.add("show");
                        }
                    }
                });

                // 팝업 닫기 버튼 클릭 시
                $("button[name='btnPopupClose']").on("click", function(e) {
                    const currentPopup = e.target.closest(".notice-popup"); // 닫기를 누른 해당 팝업
                    const currentPopupNo = currentPopup.getAttribute("data-popup-no");

                    currentPopup.classList.remove("show"); // 닫힘 처리

                    const popupAreaEl = document.querySelector("#mainPopup");
                    const popupClosePolicy = popupAreaEl.getAttribute("data-popup-close"); // 닫기 설정 정책

                    // 닫기 설정 체크박스에 체크 된 경우
                    if (document.getElementById("checkPopup"+currentPopupNo).checked) {
                        let expireDate = new Date();

                        switch (popupClosePolicy) { // 팝업 닫기 정책에 따라 쿠키 만료시간 지정
                            case "24h":
                                expireDate.setDate(expireDate.getDate() + 1); // 1일 후
                                break;
                            case "7d":
                                expireDate.setDate(expireDate.getDate() + 7); // 7일 후
                                break;
                            case "30d":
                                expireDate.setDate(expireDate.getDate() + 30); // 30일 후
                                break;
                            default:
                                break;
                        }

                        expireDate.setTime(expireDate.getTime() + (9 * 60 * 60 * 1000)); // 한국 표준시에 맞게 9시간 추가

                        let popupNoList = "";
                        if (commUtil.isEmpty(popupCookie)) {
                            popupNoList = currentPopupNo;
                        } else {
                            popupNoList = popupCookie;
                            popupNoList += "," + currentPopupNo;
                        }

                        commUtil.setCookie("popupBlockPage", popupNoList, { expires: expireDate.toUTCString() });
                        popupCookie = commUtil.getCookie("popupBlockPage"); // 팝업 쿠키 새로 담기
                    }
                });
            }
        });
    </script>


</body></html>
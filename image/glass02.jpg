    <script type="text/javascript">
        $(document).ready(function() {

            // 통합검색 버튼 이벤트 처리
            const dataLang = document.getElementById("btnGnbSearch").getAttribute("data-lang");
            document.getElementById("btnGnbSearch").addEventListener("click", () => commUtil.fnGoSearchResult(dataLang, "gnbSearchWord"));
            document.getElementById("gnbSearchWord").addEventListener("keyup", (event) => {
                if (event.key === "Enter") commUtil.fnGoSearchResult(dataLang, "gnbSearchWord");
            });

            // 게시판 공통 목록/페이징 이벤트 처리
            if (document.getElementById("frmList") != null) {

                // 페이징 버튼 클릭
                document.querySelectorAll("ul.pagination li").forEach(li => {
                    li.addEventListener("click", () => commUtil.fnSetBoardList(li.value));
                });

                // 검색 버튼 클릭 & Enter로 검색
                document.getElementById("btnSearch").addEventListener("click", () => commUtil.fnSetBoardList(1));
                document.getElementById("searchWord").addEventListener("keyup", (event) => {
                    if (event.key === "Enter") commUtil.fnSetBoardList(1);
                });
            }

            // 목록 버튼 클릭
            if (document.getElementById("btnList") != null) {
                document.getElementById("btnList").addEventListener("click", () => commUtil.fnGoList());
            }

        });

        // [CSRF 공통 설정] - FORM 액션 시 CSRF Token hidden input 주입
        const csrfMetaTag = document.querySelector("meta[name='csrf_token']");
        if (csrfMetaTag != null) {
            let formList = Array.from(document.getElementsByTagName("form"));
            const csrfTokenValue = csrfMetaTag.getAttribute("content");
            formList.forEach(form => {
                if (form.method.toUpperCase() != "GET") {
                    let csrfInput = document.createElement("input");
                    csrfInput.setAttribute("name", "_csrf");
                    csrfInput.setAttribute("type", "hidden");
                    csrfInput.setAttribute("value", csrfTokenValue);
                    form.appendChild(csrfInput);
                }
            });
        }

    </script>


        
        
    <script type="text/javascript">
        $(document).ready(function() {

            const contextPath = "\/attach"; // 파일 context path
            const caseList = null; // 시공사례 목록
            const casePopupEl = document.getElementById("layer-popup"); // 시공사례 팝업

            // 시공사례 클릭 이벤트
            document.querySelectorAll("ul.board-list button[data-pop='layer-popup']").forEach(clickedEl => {
                clickedEl.addEventListener("click", (event) => {
                    const currentCaseNo = clickedEl.getAttribute("data-no");
                    const caseImgList = caseList.find(currentCase => currentCase.no.toString() === currentCaseNo).imgFileList;

                    let imgListHtml = "";
                    for (let caseImg of caseImgList) {
                        const alt = caseImg.nameOrg.replace(`.${caseImg.extension}`, '');
                        imgListHtml += `
                            <div class="swiper-slide">
                                <img src="${contextPath}${caseImg.path}/${caseImg.name}" alt="${alt}">
                            </div>
                        `;
                    }
                    casePopupEl.querySelector(".swiper-wrapper").innerHTML = imgListHtml;

                    subFunc.subFunc.productPopSlide.update(); // 슬라이드 데이터 업데이트
                    uiCommon.layerPopup.open(event); // 레이어 팝업 표시
                });
            });

            // 시공사례 팝업 닫기 이벤트
            document.querySelector("button.popup-close").addEventListener("click", (event) => uiCommon.layerPopup.close(event));

        });
    </script>


    

